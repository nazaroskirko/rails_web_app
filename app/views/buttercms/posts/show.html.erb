<%= content_for :html_title, @post.seo_title %>
<%= content_for :meta_description, @post.meta_description %>

<div class="post-intro">
  <h2><%= @post.title %></h2>
  <p>By <%= "#{@post.author.first_name} #{@post.author.last_name}" %>  â€¢  <%= Time.parse(@post.published).strftime('%B %d, %Y') %></p>
</div>

<section class="row">
  <div class="post-featured-image">
    <%= image_tag(@post.featured_image, width: '100%') if @post.featured_image %>
  </div>
  <div class="post-content">
    <%= @post.body.html_safe %>
  </div>
</section>

