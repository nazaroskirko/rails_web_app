  </head>
  <body class="fixed-header ">
    <div class="register-container full-height sm-p-t-30">
      <div class="container-sm-height full-height">
        <div class="row row-sm-height">
          <div class="col-sm-12 col-sm-height col-middle">
            <% flash.each do |message_type, message| %>
              <div class="alert no-marg alert-<%=message_type%>">
                <%=message %>
              </div>
              <% end %> 
            <div class="row">
            <%= image_tag "logo.png", alt: "logo", class:"sign-up-logo", data: {src: image_path("logo.png"), "src-retina": image_path("logo.png")} %>
          </div>
            <% unless session[:invitation_token] %>
            <h2>Fill out the form below and you will have free access to PatientNotes for 14 days.</h2>
            <% else %>
            <h2>Dr. <%= User.find(Invitation.find_by(token: session[:invitation_token]).sender_id).last_name %> has invited you to Patient Notes.  It's Free!  Just enter a password below!</h2>
            <% end %>
            <%= render 'form' %>


          </div>
        </div>
      </div>
    </div>
